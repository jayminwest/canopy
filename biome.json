{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.canopy",
			"!**/.seeds",
			"!**/.mulch",
			"!**/.overstory",
			"!**/.beads",
			"!**/.claude"
		]
	}
}
